{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@@utils/*": ["src/utils/*"],
      "@@components/*": ["src/components/*"],
      "@@services/*": ["src/services/*"],
      "@@context/*": ["src/context/*"],
      "@@hooks/*": ["src/hooks/*"],
      "@@types/*": ["src/types/*"]
    }
  },
  "include": ["vite.config.ts"]
}
