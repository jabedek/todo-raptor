{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@@api/*": ["src/app/api/*"],
      "@@components/*": ["src/app/components/*"],
      "@@utils/*": ["src/app/utils/*"],

      "@@contexts": ["src/app/contexts/index"],
      "@@hooks": ["src/app/hooks/index"],
      "@@types": ["src/app/types/index"]
    }
  },
  "include": ["vite.config.ts"]
}
